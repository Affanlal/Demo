---
import { Image } from 'astro:assets';
import urvashiLogo from '../images/urvashi-logo.png';
import Menu from '../components/Menu.astro';
---

<div class="w-[100vw] flex h-[50px] md:h-[100px]  bg-blue fixed z-10 pb-3 bg-scroll px-3">
    <div class="w-full flex justify-center  mx-auto relative">
        <div class="w-[33%] flex flex-col justify-center">
            <Menu />
         </div>
        <div class="w-[33%] flex flex-col justify-center  items-center px-3 opacity-[5]">
            <div class="bg-white rounded-b-2xl mt-[-10px] p-5 w-[150%] h-[150%] md:w-[75%] md:h-[100%] flex flex-col items-center justify-center">
                <Image src={urvashiLogo} alt="Urvashi Foundation. Propelling Education in INDIA" class="" />
            </div>
        </div>
       

        <div class="w-[33%] flex flex-col justify-center items-end ">
                <div >
                    <a href="#" class=" text-[3vw]  md:text-[1vw] border-2 px-3 py-1 md:px-6 md:py-2 hover:bg-yellow hover:text-dark-blue rounded-full border-white leading-5 m-0  text-white font-extrabold">
                        <span>Donate </span>
                       
                      </a> 
                     
                </div>
               
         </div>  
    </div>
   
</div>